<!DOCTYPE html>
<html>
	<head>
		<title>yui3-ujs demo</title>
		<meta name="csrf-param" content="authenticity_token"/>
		<meta name="csrf-token" content="cf50faa3fe97702ca1ae"/>
		<script type="text/javascript">
			YUI_config = {filter:'raw',combine:false};
		</script>
		<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/combo?3.2.0/build/cssreset/reset-min.css&3.2.0/build/cssfonts/fonts-min.css&3.2.0/build/cssgrids/grids-min.css">
		<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.2.0/build/cssbase/base-min.css">
		<script type="text/javascript" charset="utf-8" src="http://yui.yahooapis.com/<%= @yui_version %>/build/yui/yui.js"></script>
		<script src="/vendor/rails.js" type="text/javascript"></script>
		<style type="text/css">
			body { padding: 10px; }
			#bd {
				padding-left:350px;
			}

			#results {
				margin-left:-350px;
				width:350px;
			}

			#main {
				width:100%;
			}
			
			.raw { font-family: monospace; }
		</style>
		<script type="text/javascript">
			YUI().use('node-base', 'node-event-delegate', 'node-event-simulate', 'console', 'rails-ujs', function(Y) {
				Y.on('domready', function() {
					var r = new Y.Console({
						newestOnTop: false,
						style: 'block'
					});
					r.render('#yuiConsole');
					Y.one('#test1').on('click', function() {
						Y.one('#myform').submit();
					});

					Y.one('#test2').on('click', function(e) {
						Y.one('#myform').fire('submit', e);
					});
					
					Y.one('#test3').on('click', function(e) {
						Y.one('#submitbutton').simulate('click');
					});
					Y.one('#test4').on('click', function(e) {
						Y.one('#submitbutton').simulate("keypress", { charCode: 13 });
					});
										
				});
			});
			
		</script>
	</head>
	<body class="yui3-skin-sam yui-skin-sam">
		<div id="hd"><h1>yui3-ujs demo</h1></div>
		<div id="bd" class="yui3-g">
			<div id="results" class="yui3-u">
				<div id="yuiConsole"></div>
				<br><br>
				<div id="ajaxResponse"></div>
			</div>
			<div id="main" class="yui3-u">
				<input type="button" id="test1" value="submit form">
				<input type="button" id="test2" value="fire submit">
				<input type="button" id="test3" value="simulate button">
				<input type="button" id="test4" value="simulate enter">
				<form id="myform" method="post" data-remote="true" action="/remote" onsumbit="return false;">
					<input type="text" name="test" value="1">
					<input type="submit" id="submitbutton" value="submit">
				</form>
			</div>
		</div>
		<div id="ft"></div>
	</body>
</html>
